{
  "name": "nodejs-scaffolding",
  "version": "1.0.0",
  "description": "",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "npm run build && concurrently -k -n 'TypeScript,Node' -c 'yellow.bold,cyan.bold' 'npm run watch-ts' 'nodemon ./dist/server.js' -i true --default-input-target 1",
    "dev:verbose": "nodemon --vebose --watch src/ --exec 'npm run build && npm start'  -e ts",
    "watch-ts": "tsc -w && npm run copy-files",
    "build": "tsc --build && npm run copy-files",
    "build:clean": "tsc --build && npm run copy-files",
    "clean": "rimraf ./dist",
    "test": "cypress open",
    "copy-files": "copyfiles -u 1 './src/views/template/*.html' './src/views/template/*.pug' ./dist"
  },
  "author": "Manuel Osorio",
  "license": "MIT",
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/chalk": "^2.2.0",
    "@types/cors": "^2.8.10",
    "@types/dotenv": "^8.2.0",
    "@types/email-templates": "^8.0.2",
    "@types/express": "^4.17.11",
    "@types/express-flash": "^0.0.2",
    "@types/express-mysql-session": "^2.1.2",
    "@types/express-session": "^1.17.3",
    "@types/helmet": "^4.0.0",
    "@types/mocha": "^8.2.1",
    "@types/mysql": "^2.15.18",
    "@types/nodemailer": "^6.4.0",
    "@types/socket.io": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "chai": "^4.3.4",
    "copy-and-watch": "^0.1.5",
    "copyfiles": "^2.4.1",
    "cypress": "^6.6.0",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-cypress": "^2.11.2",
    "eslint-plugin-prettier": "^3.3.1",
    "mocha": "^8.3.2",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "add": "^2.0.6",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.20.0",
    "chalk": "^4.1.2",
    "concurrently": "^6.5.1",
    "cors": "^2.8.5",
    "dotenv": "^8.6.0",
    "express": "^4.17.3",
    "express-flash": "^0.0.2",
    "express-mysql-session": "^2.1.6",
    "express-rate-limit": "^6.3.0",
    "express-session": "^1.17.2",
    "helmet": "^4.6.0",
    "morgan": "^1.10.0",
    "mysql": "^2.18.1",
    "pug": "^3.0.2",
    "snyk": "^1.996.0",
    "socket.io": "^4.6.0"
  }
}
